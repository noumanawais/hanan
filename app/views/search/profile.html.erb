

<h1 class="p_heading">Upload Image</h1>



<div class="InnerWrapper">

<%= form_for current_user,:url => {:action => "profile" } , :html => {:multipart => true} do |f| %>
  
  <p>
    
    <div class="profile_image"><%= image_tag current_user.avatar_url.to_s if current_user.avatar? %></div><br/><br/><br/>
    <%= f.file_field :avatar , :color=>"red" %>
    <div class="clearfix"></div><br/>
    <%= f.submit "Update" , :class=>"btn-tertiary" %>
  </p>
<% end %>

</div>