<html>
<head>
    <meta name="viewport" content="width=1000px, initial-scale=1" />
    <title>World's Largest Professional Network | LinkedIn</title>
    <link rel="shortcut icon" href="./favicon.ico" type="image/x-icon" />
	<!--Styles-->
    <link href="/stylesheets/screen1(mainHome).css" rel="stylesheet" />
	<!---------->
</head>
<body>
	
    <div id="global-error-box-container"  class="wrap-middle">
        <div id="error-global" class="error-box hidden" >
            <div class="error-message-box">
                <p></p>
            </div>
        </div>
    </div>

    <div id="middle-content" class="wrap-middle">
        <div class="middle-upper">
            <div class="middle-upper-left-part">
                <h1>Over 225 million professionals use LinkedIn to exchange information, ideas and opportunities</h1>
                <ul>
                    <li id="reconnect">Stay informed about your contacts and industry</li>
                    <li id="answers">Find the people & knowledge you need to achieve your goals</li>
                    <li id="power">Control your professional identity online</li>
                </ul>
            </div>
            <div class="middle-upper-right-part">
                <div class="joinIn-box">
                    <div class="joinIn-box-header">
                        <h2>Join LinkedIn Today</h2>
                    </div>
                    <div class="clear"></div>
                    
                    <div class="joinIn-box-bottom">
                        
                        <%= form_for(:user, :url => registration_path(:user)) do |f| %>
                         

                            <div id="join-form-main" > 
                            
	

		                               
                                    <%= f.label :first_name %>
                                    <div class="join-form-input-boxes">
                                        <span id="f_name-error" class="error"></span>
                                       <%= f.text_field :first_name,:id => "firstName" %> 
                                    </div>
                                    <%= f.label :last_name %>
                                    <div class="join-form-input-boxes">
                                        <span id="l_name-error" class="error"></span>
                                        <%= f.text_field :last_name,:id => "lastName" %>
                                    </div>
                                    <%= f.label :email %>
                                    <div class="join-form-input-boxes">
                                        <span id="e-error" class="error"></span>
                                        <%= f.email_field :email , :id => "Email" %>
                                    </div>
                                    <%= f.label :password %>
                                    <div class="join-form-input-boxes">
                                        <span class="error" id="p-error"></span>
                                        <%= f.password_field :password , :id => "Pass" %>
                                    </div>
                                <div class="clear"></div>
                            </div>
                                                                            
                            <label id="info">6 or more charactors</label>                                                                               
                            <div class="clear"></div>
                            <p id="joinNow"><%= f.submit "Join Now", :class => "submit btn-tertiary" , :id=> "submit-join-form-main-page" %><span>*</span></p>
                            
                            
                       <% end %>
                       <p id="already">Already on LinkedIn?<%= link_to 'Sign In', new_user_session_path %></p>                                
                    </div>               
                </div>
                <div class="clear"></div>
            </div>           
        </div>
        <div class="middle-middle-part .wrap-middle" >
            <div class="content">
                <form>
                    <label>Search for someone by name: </label><input type="text" required="required" placeholder="First Name" /><input placeholder="Last Name" required="required" type="text" /><input id="submit-search-by-name" class="btn-secondary" type="submit" value="Go" />
                </form>
                <div class="member-list-alphabets">
                    <p class="LinkedIn-member-directory">LinkedIn member directory:</p>
                    <ul class="LinkedIn-member-directory-list">
                        <li><a href="#">a</a></li>
                        <li><a href="#">b</a></li>
                        <li><a href="#">c</a></li>
                        <li><a href="#">d</a></li>
                        <li><a href="#">e</a></li>
                        <li><a href="#">f</a></li>
                        <li><a href="#">g</a></li>
                        <li><a href="#">h</a></li>
                        <li><a href="#">i</a></li>
                        <li><a href="#">j</a></li>
                        <li><a href="#">k</a></li>
                        <li><a href="#">l</a></li>
                        <li><a href="#">m</a></li>
                        <li><a href="#">n</a></li>
                        <li><a href="#">o</a></li>
                        <li><a href="#">p</a></li>
                        <li><a href="#">q</a></li>
                        <li><a href="#">r</a></li>
                        <li><a href="#">s</a></li>
                        <li><a href="#">t</a></li>
                        <li><a href="#">u</a></li>
                        <li><a href="#">v</a></li>
                        <li><a href="#">w</a></li>
                        <li><a href="#">x</a></li>
                        <li><a href="#">y</a></li>
                        <li><a href="#">z</a></li>
                        <li><a href="#">more</a></li>
                    </ul>
                </div>
                <div class="search-by-country">
                    <p class="LinkedIn-member-directory">Browse members </p>
                    <%= link_to "by country", welcome_bycountry_path%>
                </div>
            </div>

        </div>
        <div class="footer-useragreement">
                <p class="LinkedIn-member-directory">* By joining LinkedIn, you agree to LinkedIn's <%= link_to "User Agreement", welcome_useragreement_path%>, <%= link_to "Privacy Policy", welcome_privacypolicy_path%> and <%= link_to "Cookie Policy", welcome_cookies_path%>.</p>
        </div>    
          
     
	<!--Scripts-->
	<script src="/javascripts/jquery.js" ></script>
	<script src="/javascripts/script.js" ></script>
	
</body>
</html>